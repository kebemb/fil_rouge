{% extends '/admin/base_admin.html.twig' %}

{% block title %}Hello AdminTypeController!{% endblock %}

{% block contenu %}
    <table class="table table-success table-striped-columns">
        <thead>
        <tr>
            <th scope="col">Type de formation</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.libelle }}</td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('app_admin_type_modifier', {'id': type.id}) }}">Modifier</a>
                    <a class="btn btn-danger" onclick="return confirm('Etes vous sur ?')" href="{{ path('app_admin_type_supprimer', {'id': type.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_admin_type_ajouter') }}" class="btn btn-primary">Ajouter un type de formation</a>
{% endblock %}
