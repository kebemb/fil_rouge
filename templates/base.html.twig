<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand text-white"  href="{{ path('app_formation_lister') }} "> <h3>Accueil</h3> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active text-white" aria-current="page" href="{{ path('app_profil') }}"><h3>Profil</h3></a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link active text-white" aria-current="page" href="{{ path('app_admin_formation_lister') }}"><h3>Admin</h3></a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path("app_logout") }}">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <button type="button" class="btn btn-primary"><h3>Déconnexion</h3></button>
                            </a>
                        </li>
                    </ul>
                {% else %}
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path("app_login") }}">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <button type="button" class="btn btn-primary"><h3>Connexion</h3></button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{ path("app_register") }}">
                                <i class="fa-solid fa-right-from-bracket"></i>
                                <button type="button" class="btn btn-primary"><h3>Inscription</h3></button>
                            </a>
                        </li>
                    </ul>
                {% endif %}


            </div>
        </nav>
    </header>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    </body>
</html>
